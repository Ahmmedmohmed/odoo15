<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="inherit_print_employee_badge_template_id" inherit_id="hr.print_employee_badge">
         <xpath expr="//div[hasclass('page')]" position="replace">
             <div class="page">
                <t t-foreach="docs" t-as="employee">
                    <div class="col-md-6">
                        <table style="width:243pt; height:153pt; border: 1pt solid black; border-collapse:separate; border-radius:8pt; margin:5pt">
                            <td style="width:33%;" valign="center">
                                <table style="width:77pt; height:150pt">
                                    <tr style="height:30%">
                                        <td align="center" valign="center">
                                            <img t-if="employee.company_id.logo" t-att-src="image_data_uri(employee.company_id.logo)" style="max-height:45pt;max-width:90%" alt="Company Logo"/>
                                        </td>
                                    </tr>
                                    <tr style="height:50%;">
                                        <td align="center" valign="center">
                                            <img t-att-src="image_data_uri(employee.avatar_1920)" style="max-height:85pt;max-width:90%" alt="Employee Image"/>
                                        </td>
                                    </tr>
                                    <tr style="height:20%;">
                                        <td align="center" valign="center">
                                            <strong>HR Manager</strong>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                            <td style="width:67%" valign="center">
                                <table style="width:155pt; height:85pt">
                                    <br/>
                                    <tr>
                                        <td>
                                            <div class="row" style="font-size:10pt; text-align: left; margin-left:5pt;">
                                                <strong>Name : </strong>
                                                <span t-esc="employee.name"/>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div class="row" style="font-size:10pt; text-align: right; margin-right:5pt;" dir="rtl">
                                                <strong>الإسم : </strong>
                                                <span t-esc="employee.arabic_name"/>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div class="row" style="font-size:10pt; text-align: left; margin-left:5pt;">
                                                <strong>Dept. : </strong>
                                                <span t-esc="employee.department_id.name"/>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div class="row" style="font-size:10pt; text-align: right; margin-right:5pt;" dir="rtl">
                                                <strong>اﻹدارة : </strong>
                                                <span t-esc="employee.department_id.name"/>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div class="row" style="font-size:10pt; text-align: left; margin-left:5pt;">
                                                <strong>Title : </strong>
                                                <span t-esc="employee.job_title"/>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div class="row" style="font-size:10pt; text-align: right; margin-right:5pt;" dir="rtl">
                                                <strong>الوظيفة : </strong>
                                                <span t-esc="employee.job_position_arabic"/>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div class="row" style="font-size:10pt; text-align: left; margin-left:5pt;">
                                                <strong>Exp.Date : </strong>
                                                <span t-esc="employee.expiration_date"/>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div class="row" style="font-size:10pt; text-align: right; margin-right:5pt;" dir="rtl">
                                                <strong>ينتهي في : </strong>
                                                <span t-esc="employee.expiration_date"/>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div class="row" style="font-size:10pt; text-align: right; margin-right:5pt;" dir="rtl">
                                                <strong>الرقم القومي : </strong>
                                                <span t-esc="employee.identification_id"/>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div class="row" style="font-size:10pt; text-align: right; margin-right:5pt;" dir="rtl">
                                                <strong><br/></strong>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </table>
                    </div>
                </t>
            </div>
         </xpath>
    </template>

</odoo>