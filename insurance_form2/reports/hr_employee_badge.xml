<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="inherit_print_employee_profile_custom_v2" inherit_id="hr.print_employee_badge">
        <xpath expr="//div[hasclass('page')]" position="replace">
            <div class="page" dir="rtl" style="font-family: 'Cairo', 'Tajawal', sans-serif; color: #333; font-size: 13px;">

                <t t-foreach="docs" t-as="employee">

                    <div class="row" style="border-bottom: 3px solid #5d3b6d; padding-bottom: 10px; margin-bottom: 20px; align-items: center;">

                        <div class="col-10 text-right">
                            <h2 style="color: #5d3b6d; font-weight: bold; margin: 0; padding: 0;">
                                <span t-field="employee.arabic_name"/>
                            </h2>
                            <h4 style="color: #008f8c; margin: 5px 0; font-weight: bold;">
                                <span t-field="employee.job_position_arabic"/>
                            </h4>
                            <p style="color: #666; font-size: 12px; margin: 0;">
                                <strong>كود الموظف:</strong> <span t-field="employee.barcode"/>
                                <span style="margin: 0 10px;">|</span>
                                <strong>Department:</strong> <span t-field="employee.department_id.name"/>
                            </p>
                        </div>

                        <div class="col-2 text-left">
                            <div style="border: 1px solid #ccc; padding: 2px; width: 100px; height: 100px; display: flex; align-items: center; justify-content: center; overflow: hidden; float: left;">
                                <img t-if="employee.avatar_1920" t-att-src="image_data_uri(employee.avatar_1920)" style="max-height: 100%; max-width: 100%;"/>
                                <span t-else="" style="font-size: 10px; color: #ccc;">No Image</span>
                            </div>
                        </div>
                    </div>

                    <div class="row" style="margin-bottom: 15px;">
                        <div class="col-12">
                            <h4 style="background-color: #f4f4f4; color: #5d3b6d; font-weight: bold; padding: 8px 10px; border-right: 5px solid #5d3b6d; box-shadow: 2px 2px 5px rgba(0,0,0,0.1);">
                                بيانات العمل (Work Information)
                            </h4>
                        </div>
                    </div>

                    <div class="row" style="margin-bottom: 5px;">
                        <div class="col-2 font-weight-bold">موبايل العمل:</div>
                        <div class="col-4" style="border-bottom: 1px solid #ddd; padding-bottom: 2px; margin-bottom: 10px;">
                            <span t-field="employee.mobile_phone"/>
                        </div>
                        <div class="col-2 font-weight-bold">المدير المباشر:</div>
                        <div class="col-4" style="border-bottom: 1px solid #ddd; padding-bottom: 2px; margin-bottom: 10px;">
                            <span t-field="employee.parent_id.name"/>
                        </div>
                    </div>

                    <div class="row" style="margin-bottom: 5px;">
                        <div class="col-2 font-weight-bold">تاريخ الدخول:</div>
                        <div class="col-4" style="border-bottom: 1px solid #ddd; padding-bottom: 2px; margin-bottom: 10px;">
                            <span t-field="employee.company_entry_date"/>
                        </div>
                        <div class="col-2 font-weight-bold">تاريخ بدء العمل:</div>
                        <div class="col-4" style="border-bottom: 1px solid #ddd; padding-bottom: 2px; margin-bottom: 10px;">
                            <span t-field="employee.joining_date"/>
                        </div>
                    </div>

                    <div class="row" style="margin-bottom: 20px;">
                        <div class="col-2 font-weight-bold">رتبة الموظف:</div>
                        <div class="col-4" style="border-bottom: 1px solid #ddd; padding-bottom: 2px; margin-bottom: 10px;">
                            <span t-field="employee.employee_rank"/>
                        </div>
                        <div class="col-2 font-weight-bold">رقم الحساب البنكي:</div>
                        <div class="col-4" style="border-bottom: 1px solid #ddd; padding-bottom: 2px; margin-bottom: 10px;">
                            <span t-field="employee.account_number_1"/>
                        </div>
                    </div>

                    <div class="row" style="margin-bottom: 15px;">
                        <div class="col-12">
                            <h4 style="background-color: #f4f4f4; color: #5d3b6d; font-weight: bold; padding: 8px 10px; border-right: 5px solid #5d3b6d; box-shadow: 2px 2px 5px rgba(0,0,0,0.1);">
                                البيانات الشخصية (Personal Information)
                            </h4>
                        </div>
                    </div>

                    <div class="row" style="margin-bottom: 5px;">
                        <div class="col-2 font-weight-bold">الرقم القومي:</div>
                        <div class="col-4" style="border-bottom: 1px solid #ddd; padding-bottom: 2px; margin-bottom: 10px;">
                            <span t-field="employee.national_id"/>
                        </div>
                        <div class="col-2 font-weight-bold">تاريخ الميلاد:</div>
                        <div class="col-4" style="border-bottom: 1px solid #ddd; padding-bottom: 2px; margin-bottom: 10px;">
                            <span t-field="employee.birth_date"/>
                        </div>
                    </div>

                    <div class="row" style="margin-bottom: 5px;">
                        <div class="col-2 font-weight-bold">الحالة الاجتماعية:</div>
                        <div class="col-4" style="border-bottom: 1px solid #ddd; padding-bottom: 2px; margin-bottom: 10px;">
                            <span t-field="employee.marital"/>
                        </div>
                        <div class="col-2 font-weight-bold">المؤهل الدراسي:</div>
                        <div class="col-4" style="border-bottom: 1px solid #ddd; padding-bottom: 2px; margin-bottom: 10px;">
                            <span t-field="employee.certificate"/>
                        </div>
                    </div>

                    <div class="row" style="margin-bottom: 5px;">
                         <div class="col-2 font-weight-bold">العنوان الحالي:</div>
                         <div class="col-4" style="border-bottom: 1px solid #ddd; padding-bottom: 2px; margin-bottom: 10px;">
                            <span t-if="employee.address_home_id" t-esc="employee.address_home_id.name"/>
                            <span t-if="employee.address_home_id and employee.address_home_id.street">, <span t-esc="employee.address_home_id.street"/></span>
                         </div>
                         <div class="col-2 font-weight-bold">جهة الطوارئ:</div>
                         <div class="col-4" style="border-bottom: 1px solid #ddd; padding-bottom: 2px; margin-bottom: 10px;">
                             <span t-field="employee.emergency_contact"/>
                         </div>
                    </div>

                    <div class="row" style="margin-bottom: 20px;">
                         <div class="col-2 font-weight-bold">هاتف الطوارئ:</div>
                         <div class="col-4" style="border-bottom: 1px solid #ddd; padding-bottom: 2px; margin-bottom: 10px;">
                             <span t-field="employee.emergency_phone"/>
                         </div>
                         <div class="col-6"></div>
                    </div>


                    <div class="row" style="margin-bottom: 15px;">
                        <div class="col-12">
                            <h4 style="background-color: #f4f4f4; color: #5d3b6d; font-weight: bold; padding: 8px 10px; border-right: 5px solid #5d3b6d; box-shadow: 2px 2px 5px rgba(0,0,0,0.1);">
                                البيانات التأمينية (Insurance Details)
                            </h4>
                        </div>
                    </div>

                    <div class="row" style="margin-bottom: 5px;">
                        <div class="col-2 font-weight-bold">الرقم التأميني:</div>
                        <div class="col-4" style="border-bottom: 1px solid #ddd; padding-bottom: 2px; margin-bottom: 10px;">
                            <span t-field="employee.insurance_number"/>
                        </div>
                        <div class="col-2 font-weight-bold">تاريخ دخول التأمينات:</div>
                        <div class="col-4" style="border-bottom: 1px solid #ddd; padding-bottom: 2px; margin-bottom: 10px;">
                            <span t-field="employee.insurance_entry_date"/>
                        </div>
                    </div>

                    <div class="row" style="margin-bottom: 20px;">
                        <div class="col-2 font-weight-bold">الكود التأميني:</div>
                        <div class="col-4" style="border-bottom: 1px solid #ddd; padding-bottom: 2px; margin-bottom: 10px;">
                            <span t-field="employee.social_insurance_code"/>
                        </div>
                        <div class="col-2 font-weight-bold">المسمى التأميني:</div>
                        <div class="col-4" style="border-bottom: 1px solid #ddd; padding-bottom: 2px; margin-bottom: 10px;">
                            <span t-field="employee.insurance_job_title"/>
                        </div>
                    </div>

                    <div class="section-container">
                        <div class="row" style="margin-bottom: 15px;">
                            <div class="col-12">
                                <h4 style="background-color: #f4f4f4; color: #5d3b6d; font-weight: bold; padding: 8px 10px; border-right: 5px solid #5d3b6d; box-shadow: 2px 2px 5px rgba(0,0,0,0.1);">
                                    السجل التدريبي والكورسات (Training Courses)
                                </h4>
                            </div>
                        </div>

                        <table class="table table-bordered table-sm" style="width: 100%; text-align: center; border: 1px solid #ddd;">
                            <thead style="background-color: #5d3b6d; color: white;">
                                <tr>
                                    <th style="width: 30%;">اسم الكورس</th>
                                    <th style="width: 15%;">البداية</th>
                                    <th style="width: 15%;">النهاية</th>
                                    <th style="width: 20%;">الجهة</th>
                                    <th style="width: 20%;">ملاحظات</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="employee.course_ids" t-as="course">
                                    <tr>
                                        <td><span t-field="course.name"/></td>
                                        <td><span t-field="course.date_start"/></td>
                                        <td><span t-field="course.date_end"/></td>
                                        <td><span t-field="course.location"/></td>
                                        <td><span t-field="course.notes"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <div t-if="not employee.course_ids" class="text-center text-muted">
                            لا يوجد سجل تدريبي مسجل.
                        </div>
                    </div>

                    <div class="page-break" style="page-break-after: always;"></div>

                </t>
            </div>
        </xpath>
    </template>
</odoo>