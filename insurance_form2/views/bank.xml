<odoo>
    <record id="view_bank_form" model="ir.ui.view">
        <field name="name">bank.form</field>
        <field name="model">bank.bank</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="bank"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_bank_tree" model="ir.ui.view">
        <field name="name">bank.tree</field>
        <field name="model">bank.bank</field>
        <field name="arch" type="xml">
            <tree>
                <field name="bank"/>
            </tree>
        </field>
    </record>

    <record id="action_bank_id" model="ir.actions.act_window">
        <field name="name">البنك</field>
        <field name="res_model">bank.bank</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_bank_id"
              name="البنك"
              parent="hr.menu_human_resources_configuration"
              sequence="105"
              action="insurance_form2.action_bank_id"/>

</odoo>