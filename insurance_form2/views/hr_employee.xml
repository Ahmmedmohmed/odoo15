<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_employee_form_inherit_arabic_final" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.arabic.final</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='name']/.." position="after">
                <div style="height: 5px;"></div>
                <h1>
                    <field name="arabic_name" placeholder="الاسم باللغة العربية" style="font-family: 'Cairo'; color: #5d3b6d; font-size: 1.5rem;"/>
                </h1>
            </xpath>

            <xpath expr="//field[@name='job_title']/.." position="after">
                <div style="height: 5px;"></div>
                <h3>
                    <field name="job_position_arabic" placeholder="المسمى الوظيفي بالعربي" style="color: #008f8c;"/>
                </h3>
            </xpath>

        </field>
    </record>
        <record id="inherit_hr_employee_form_view" model="ir.ui.view">
            <field name="name">hr.employee.form.view</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='image_1920']" position="replace">
                    <field name="image_1920" widget="image" class="oe_avatar"
                           options="{&quot;zoom&quot;: true, &quot;preview_image&quot;:&quot;avatar_128&quot;, 'size': [150, 150]}"/>
                </xpath>

                <xpath expr="//page[@name='public']" position="inside">
                    <group string="Employment Dates &amp; Contract">
                        <group>
                            <field name="joining_date"/>
                            <field name="company_entry_date"/>
                        </group>
                        <group>
                            <field name="company_exit_date"/>
                            <field name="expiration_date"/>
                        </group>
                    </group>
                </xpath>

                <xpath expr="//page[@name='personal_information']" position="inside">
                    <group string="Bank Accounts">
                        <group>
                            <field name="bank_1" options="{'no_create': True}"/>
                            <field name="account_number_1"/>
                        </group>
                        <group>
                            <field name="bank_2" options="{'no_create': True}"/>
                            <field name="account_number_2"/>
                        </group>
                    </group>

                    <group string="Official Documents &amp; License">
                        <group>
                            <field name="national_id"/>
                            <field name="driving_license_number"/>
                            <field name="driving_license_issue_date"/>
                            <field name="driving_license_end_date"/>
                        </group>
                        <group>
                            <field name="age"/>
                        </group>
                    </group>
                </xpath>

                <xpath expr="//page[@name='hr_settings']" position="inside">
                    <group string="Rank &amp; Grading">
                        <field name="employee_rank"/>
                    </group>
                </xpath>

                <xpath expr="//notebook/page[last()]" position="after">

                    <page name="social_insurance" string="Insurance &amp; Wages">
                        <group>
                            <group string="Insurance Details">
                                <field name="insurance_number"/>
                                <field name="social_insurance_code"/>
                                <field name="insurance_job_title"/>
                                <label for="insurance_entry_date" string="Insurance Period"/>
                                <div class="o_row">
                                    <field name="insurance_entry_date" placeholder="Start Date"/> -
                                    <field name="insurance_exit_date" placeholder="End Date"/>
                                </div>
                            </group>
                            <group string="Financial Info">
                                <field name="insurance_subscription_fee"/>
                                <field name="medical_insurance_fee"/>
                                <separator string="Salary Structure"/>
                                <field name="comprehensive_wage"/>
                                <field name="actual_wage"/>
                            </group>
                        </group>
                    </page>

                  <page name="training_courses" string="Training &amp; Courses">
                    <field name="course_ids">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="location"/>
                            <field name="notes"/>
                        </tree>
                    </field>
                </page>

                </xpath>

            </field>
        </record>
    </data>
</odoo>