<odoo>
    <data>

        <record id="group_hr_manager_employee" model="res.groups">
            <field name="name">Employee For Manager</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="tree_view_appraisal_appraisal" model="ir.ui.view">
            <field name="name">name.appraisal.appraisal.tree</field>
            <field name="model">appraisal.appraisal</field>
            <field name="arch" type="xml">
                <tree string="Appraisal">
                    <field name="employee_id"/>
                    <field name="employee_barcode"/>
                    <field name="department_id"/>
                    <field name="manager_id"/>
                    <field name="employee_wage"/>
                    <field name="last_performance_date"/>
                    <field name="appraisal_date"/>
                    <field name="total_performance_percentage" widget="percentage"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="form_view_appraisal_appraisal_form" model="ir.ui.view">
            <field name="name">name.appraisal.appraisal.form</field>
            <field name="model">appraisal.appraisal</field>
            <field name="arch" type="xml">
                <form string="Appraisal">
                    <header>
                        <button name="action_manager_confirm" type="object" string="Manager Confirm" class="oe_highlight"
                                groups="nile_air_appraisal.group_hr_manager_employee"
                                states="draft"
                        />

                        <button name="action_hr_confirm" type="object" string="HR Confirm" class="oe_highlight"
                                groups="hr.group_hr_manager"
                                states="manager_approve"
                        />

                        <button name="action_ceo_confirm" type="object" string="CEO Confirm" class="oe_highlight"
                                groups="base.group_system"
                                states="hr_approve"
                        />

                        <button name="set_to_draft" type="object" string="Set To Draft"
                                groups="nile_air_appraisal.group_hr_manager_employee"
                                states="manager_approve,hr_approve,done"
                        />

                        <field name="state" widget="statusbar" statusbar_visible="draft,manager_approve,hr_approve,done"/>
                    </header>
                    <sheet>

                        <div class="oe_title">
                            <label for="employee_id"/>
                            <h2>
                                <field name="employee_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </h2>
                        </div>

                        <group col="4">
                            <field name="employee_barcode" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="title" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="hiring_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="department_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="manager_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="employee_wage" attrs="{'readonly': [('state', '!=', 'draft')]}"
                                   groups="nile_air_appraisal.group_hr_manager_employee"/>
                            <field name="rank" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            <field name="appraisal_wage"/>
                            <field name="estimate_salary" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="last_performance_date" readonly="1"/>
                            <field name="appraisal_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="is_need_course" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                        </group>

                        <notebook>
                            <page string="Guidance to Rating Scale">
                                <group>
                                    <button name="get_questions" type="object" string="Get Questions" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                                </group>
                                <field name="rating_scale_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                    <tree editable="bottom">
                                        <field name="questions" width="80%"/>
                                        <field name="evaluation" widget="priority" width="20%"/>
                                    </tree>
                                </field>
                                <group>
                                    <div style="float:right">
                                        <group>
                                            <field name="total_performance_percentage" widget="percentage" force_save="1"/>
                                        </group>
                                    </div>
                                </group>
                                <br/>
                                <br/>
                            </page>
                            <page string="HR Guidance to Rating Scale">
                                <group>
                                    <button name="hr_get_questions" type="object" string="HR Get Questions" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                                </group>

                                <field name="hr_rating_scale_ids" attrs="{'readonly': [('state', 'in', ['done'])]}">
                                    <tree editable="bottom">
                                        <field name="questions" width="80%"/>
                                        <field name="evaluation" widget="priority" width="20%"/>
                                    </tree>
                                </field>
                                <group>
                                    <div style="float:right">
                                        <group>
                                            <field name="hr_total_performance" force_save="1"/>
                                        </group>
                                    </div>
                                </group>
                                <br/>
                                <br/>
                            </page>

                            <page string="Recommended Trainings or Courses"
                                  attrs="{'invisible': [('is_need_course', '=',False)]}">
                                <field name="trainings_courses_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                    <tree editable="bottom">
                                        <field name="courses_id"/>
                                        <field name="suggested_provider"/>
                                        <field name="estimated_cost"/>
                                        <field name="date"/>
                                    </tree>
                                </field>
                            </page>

                        </notebook>

                        <br/>
                        <label for="notes"/>
                        <field name="notes" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                   </div>
                </form>
            </field>
        </record>

        <record id="action_confirm_multi_appraisal" model="ir.actions.server">
            <field name="name">Confirm Appraisal</field>
            <field name="model_id" ref="nile_air_appraisal.model_appraisal_appraisal"/>
            <field name="type">ir.actions.server</field>
            <field name="binding_model_id" ref="nile_air_appraisal.model_appraisal_appraisal"/>
            <field name="state">code</field>
            <field name="code">action = records.confirm_multi_appraisal()</field>
        </record>

        <record id="action_view_appraisal" model="ir.actions.act_window">
            <field name="name">Appraisal</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">appraisal.appraisal</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    </p>
                <p>
                    </p>
            </field>
        </record>

        <menuitem id="appraisal_menu_form" name="Appraisal" sequence="5"/>
        <menuitem id="appraisal_category_menu" name="Appraisal" parent="appraisal_menu_form"
                  action="action_view_appraisal" sequence="1"/>

    </data>
</odoo>