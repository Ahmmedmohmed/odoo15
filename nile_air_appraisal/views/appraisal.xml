<odoo>
    <data>

        <record id="group_hr_manager_employee" model="res.groups">
            <field name="name">Employee For Manager</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>


        <record id="tree_view_appraisal_appraisal" model="ir.ui.view">
            <field name="name">name.appraisal.appraisal.tree</field>
            <field name="model">appraisal.appraisal</field>
            <field name="arch" type="xml">
                <tree string="Appraisal">
                    <field name="employee_id"/>
                    <field name="employee_barcode"/>
                    <field name="department_id"/>
                    <field name="manager_id"/>
                    <field name="employee_wage"/>
                    <field name="last_performance_date"/>
                    <field name="appraisal_date"/>
<!--                    <field name="total_performance"/>-->
                    <field name="total_performance_percentage" widget="percentage"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="form_view_appraisal_appraisal_form" model="ir.ui.view">
            <field name="name">name.appraisal.appraisal.form</field>
            <field name="model">appraisal.appraisal</field>
            <field name="arch" type="xml">
                <form string="Appraisal">
                    <header>

                        <button name="button_confirm" type="object" string="Confirm" class="oe_highlight"
                                groups="nile_air_appraisal.group_hr_manager_employee"
                                attrs="{'invisible': [('state', '=', 'confirm')]}"
                        />
                        <button name="set_to_draft" type="object" string="Set To Draft" class="oe_highlight"
                                groups="nile_air_appraisal.group_hr_manager_employee"
                                attrs="{'invisible': [('state', '=', 'draft')]}"

                        />
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
                    </header>
                    <sheet>


                        <div class="oe_title">
                            <label for="employee_id"/>
                            <h2>
                                <field name="employee_id" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                            </h2>
                        </div>

                        <group col="4">
                            <field name="employee_barcode" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                            <field name="title" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                            <field name="hiring_date" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                            <field name="department_id" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                            <field name="manager_id" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                            <field name="employee_wage" attrs="{'readonly': [('state', '=', 'confirm')]}"
                                   groups="nile_air_appraisal.group_hr_manager_employee"/>
                            <field name="rank" attrs="{'readonly': [('state', '=', 'confirm')]}" widget="percentage"/>
                            <field name="estimate_salary" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                            <field name="last_performance_date" readonly="1"/>
                            <field name="appraisal_date" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                            <field name="is_need_course"/>
                        </group>
                        <group>


                        </group>


                        <notebook>
                            <page string="Guidance to Rating Scale">
                                <group>
                                    <button name="get_questions" type="object" string="Get Questions"/>
                                </group>
                                <field name="rating_scale_ids" attrs="{'readonly': [('state', '=', 'confirm')]}">
                                    <tree editable="bottom">
                                        <field name="questions" width="80%"/>
                                        <field name="evaluation" widget="priority" width="20%"/>
                                    </tree>
                                </field>
                                <group>
                                    <div style="float:right">
<!--                                        <group>-->
<!--                                            <field name="total_performance" force_save="1"/>-->
<!--                                        </group>-->
                                        <group>
                                            <field name="total_performance_percentage" widget="percentage" force_save="1"/>
                                        </group>
                                    </div>
                                </group>
                                <br/>
                                <br/>
                            </page>
                            <page string="HR Guidance to Rating Scale">
                                <group>
                                    <button name="hr_get_questions" type="object" string="HR Get Questions"/>
                                </group>

                                <field name="hr_rating_scale_ids">
                                    <tree editable="bottom">
                                        <field name="questions" width="80%"/>
                                        <field name="evaluation" widget="priority" width="20%"/>
                                    </tree>
                                </field>
                                <group>
                                    <div style="float:right">
                                        <group>
                                            <field name="hr_total_performance" force_save="1"/>
                                        </group>
                                    </div>
                                </group>
                                <br/>
                                <br/>
                            </page>


                            <page string="Recommended Trainings or Courses"
                                  attrs="{'invisible': [('is_need_course', '=',False)]}">
                                <field name="trainings_courses_ids" attrs="{'readonly': [('state', '=', 'confirm')]}">
                                    <tree editable="bottom">
                                        <field name="courses_id"/>
                                        <field name="suggested_provider"/>
                                        <field name="estimated_cost"/>
                                        <field name="date"/>
                                    </tree>
                                </field>
                            </page>

                        </notebook>


                        <br/>
                        <label for="notes"/>
                        <field name="notes"/>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_confirm_multi_appraisal" model="ir.actions.server">
            <field name="name">Confirm Appraisal</field>
            <field name="model_id" ref="nile_air_appraisal.model_appraisal_appraisal"/>
            <field name="type">ir.actions.server</field>
            <field name="binding_model_id" ref="nile_air_appraisal.model_appraisal_appraisal"/>
            <field name="state">code</field>
            <field name="code">action = records.confirm_multi_appraisal()</field>
        </record>


        <record id="action_view_appraisal" model="ir.actions.act_window">
            <field name="name">Appraisal</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">appraisal.appraisal</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>


        <!--        <record id="action_id" model="ir.actions.server">-->
        <!--                <field name="name">name</field>-->
        <!--                <field name="model_id" ref="module_name.model_object_name" />-->
        <!--                <field name="code">-->
        <!--                    action = model.function_name()-->
        <!--                </field>-->
        <!--            </record>-->


        <menuitem id="appraisal_menu_form" name="Appraisal" sequence="5"/>
        <menuitem id="appraisal_category_menu" name="Appraisal" parent="appraisal_menu_form"
                  action="action_view_appraisal" sequence="1"/>


    </data>
</odoo>