<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="form_view_hr_employee_inherit" model="ir.ui.view">
            <field name="name">name.hr.employee.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="button_appraisal" class="oe_stat_button" icon="fa-star" type="object"
                            groups="hr_contract.group_hr_contract_manager">
                        <field name="appraisal_number" widget="statinfo" string="Appraisal"/>
                    </button>
                </xpath>

            </field>
        </record>

    </data>
</odoo>