        <record id="form_view_courses_screen" model="ir.ui.view">
            <field name="name">name.courses.screen.form</field>
            <field name="model">courses.screen</field>
            <field name="arch" type="xml">
                <form string="Courses">
                    <sheet>
                        <group>
